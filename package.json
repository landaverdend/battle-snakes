{
  "name": "battle-snakes",
  "version": "1.0.0",
  "description": "Multiplayer snake game with WebSocket support",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build:deps && npm run start:apps",
    "build:deps": "npm run build:shared && npm install",
    "build:shared": "cd packages/shared && npm run build",
    "start:apps": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "npm run dev -w @battle-snakes/client",
    "dev:server": "npm run dev -w @battle-snakes/server",
    "clean": "rm -rf packages/*/dist node_modules packages/*/node_modules"
  },
  "keywords": [
    "snake",
    "websocket",
    "game",
    "multiplayer"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "concurrently": "^9.1.2"
  },
  "dependencies": {}
}
